@using Newtonsoft.Json
@*@model TModel*@
@{
    Layout = "_AdminLayout";
}

<!DOCTYPE html>

<html>
<head>
    <title>Заказ</title>
</head>
<body>

@section Scripts {
    <script type="text/javascript" src="/js/Order.js"></script>
}

<script type="text/javascript">
    var data = @Html.Raw(JsonConvert.SerializeObject(Model));
</script>

<div>
    <form id="orderForm" class="center-block">
        <br/>
        <div id="serviceName">
            <h1>Русский бильярд</h1>
        </div>
        <img id="sericeImg" class="center-block" src="/images/services/eight.png" alt="..."/>
        <div class="center">
            <div class="input-group">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-danger btn-number" data-type="minus" data-field="quant[2]">
                        <span class="glyphicon glyphicon-minus"></span>
                    </button>
                </span>
                <input id="counter" type="text" name="quant[2]" class="form-control input-number" value="1" min="1" max="1000">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-success btn-number" data-type="plus" data-field="quant[2]">
                        <span class="glyphicon glyphicon-plus"></span>
                    </button>
                </span>
                <div id="mes">
                    <h4>час.</h4>
                </div>
            </div>
            <div id="priceInfo" class="center-block">
                <div>
                    <h4>Цена: 1000 руб.</h4>
                </div>
                <div id="orderBtn" class="form-group center-block">
                    <button type="submit" class="btn btn-success center-block">Заказать</button>
                </div>
            </div>
            <br />
        </div>
    </form>

</div>
</body>
</html>