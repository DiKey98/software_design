@{
    ViewData["Title"] = "Home Page";

    if (ViewData["roleName"] == null)
    {
        if (ViewData["roleName"] == null)
        {
            Layout = "_UserLayout";
        }
        else
        {
            switch (ViewData["roleName"].ToString().ToLower())
            {
                case "администратор":
                    {
                        Layout = "_AdminLayout";
                        break;
                    }

                case "управляющий":
                    {
                        Layout = "_ManagerLayout";
                        break;
                    }

                default:
                    {
                        Layout = "_UserLayout";
                        break;
                    }
            }
        }
    }
    else
    {
        switch (ViewData["roleName"].ToString().ToLower())
        {
            case "администратор":
                {
                    Layout = "_AdminLayout";
                    break;
                }

            case "управляющий":
                {
                    Layout = "_ManagerLayout";
                    break;
                }

            default:
                {
                    Layout = "_UserLayout";
                    break;
                }
        }
    }

}

@section Scripts {
    <script type="text/javascript" src="/js/index.js"></script>
    <script type="text/javascript" src="/js/jquery.cookie.js"></script>
    <script type="text/javascript" src="/js/setlogin.js"></script>
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/1home.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Обедайте в роскошном ресторане.
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/2home.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Отдыхайте в комфортабельных номерах.
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/3home.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Любуйтесь городскими пейзажами Лас-Вегаса.
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

