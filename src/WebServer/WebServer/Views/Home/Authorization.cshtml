@using Newtonsoft.Json
@{
    if (ViewData["roleName"] == null)
    {
        Layout = "_UserLayout";
    }
    else
    {
        switch (ViewData["roleName"].ToString().ToLower())
        {
            case "администратор":
                {
                    Layout = "_AdminLayout";
                    break;
                }

            case "управляющий":
                {
                    Layout = "_ManagerLayout";
                    break;
                }

            default:
                {
                    Layout = "_UserLayout";
                    break;
                }
        }
    }
}

<script type="text/javascript">
    window.login = @Html.Raw(JsonConvert.SerializeObject(ViewData["login"]));
    window.where = @Html.Raw(JsonConvert.SerializeObject(ViewData["where"]));
</script>

@section Scripts {
    <script type="text/javascript" src="/js/index.js"></script>
    <script type="text/javascript" src="/js/Registration.js"></script>
    <script type="text/javascript" src="/js/Autorisation.js"></script>
    <script type="text/javascript" src="/js/jquery.cookie.js"></script>
    <script type="text/javascript" src="/js/setlogin.js"></script>
};


